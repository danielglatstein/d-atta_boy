<div id = "box">
  
    <% @games.each do |game| %>
      <p>
        <table border = "1">
        <th colspan = "3">
          <%= game.date %>
        </th>

        <tr>
          <td>
            <%= game.away_name %>
          </td>
          <td>
            <%= game.away_score %>
          </td>
        </tr>

        <tr>
          <td>
            <%= game.home_name %>
          </td>
          
          <td>
            <%= game.home_score %>
          </td>
        </tr>
        </table>
      </p>
    <% end %>
  
</div>
